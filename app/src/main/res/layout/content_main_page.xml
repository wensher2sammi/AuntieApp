<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wensher2sammi.auntieapp.MainPage"
    tools:showIn="@layout/activity_main_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/greetings_font"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="@string/main_greetings"
        android:id="@+id/greetings" />

    <Button
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="106dp"
        android:id="@+id/main_btn_search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onclick_btn_search"/>

    <Button
        android:text="BEST BUY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:id="@+id/main_btn_bestbuy"
        android:layout_alignBaseline="@+id/main_btn_search"
        android:layout_alignBottom="@+id/main_btn_search"
        android:layout_alignParentEnd="true"
        android:onClick="onclick_btn_bestbuy"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:id="@+id/main_spinner"
        android:layout_below="@+id/greetings"
        android:layout_alignParentStart="true" />

</RelativeLayout>
